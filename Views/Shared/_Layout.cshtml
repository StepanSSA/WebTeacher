<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplicationTeacher</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <header class="Rectangle_bn">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm ">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a role="button" class="btn btn-header" asp-controller="Home" asp-action="Index">
                                Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a role="button" class="btn btn-header" asp-controller="AboutMe" asp-action="Index">
                                Обо мне
                            </a>
                        </li>
                        <li class="nav-item">
                            <a role="button" class="btn btn-header" asp-controller="AboutCourse" asp-action="Index">
                                О курсах 
                            </a>
                        </li>
                        @if (User.IsInRole("boss"))
                        {
                            <li class="dropdown nav-item ">
                                <button class="btn btn-header dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Dropdown
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    <a class="dropdown-item btn btn-header" role="button"
                                       asp-controller="Boss" asp-action="ListBuyers">
                                        Список покупателей
                                    </a>
                                    <a class="dropdown-item btn btn-header" role="button"
                                       asp-controller="Boss" asp-action="ListCourse">
                                        Список курсов
                                    </a>
                                    <a class="dropdown-item btn btn-header" role="button"
                                       asp-controller="Boss" asp-action="RatingTable">
                                        Таблица оценок 
                                    </a>
                                    <a class="dropdown-item btn btn-header" role="button"
                                       asp-controller="Boss" asp-action="ListHomeWork">
                                        Таблица домашних работ
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/angular/angular.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
