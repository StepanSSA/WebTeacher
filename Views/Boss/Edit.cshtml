@model WebApplicationTeacher.Models.EditCourseModel

@{
    ViewData["Title"] = "Редактирование";
}


<h1> @ViewData["Title"]</h1>
<hr />
<div class="row" ng-app="app" ng-controller="EditCourseController">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            @for (int i = 0; i < Model.videos.Count; i++)
            {
                <h3>Урок № @Model.videos[i].lessonNumber</h3>
                <input hidden asp-for="@Model.videos[i].id" value="@Model.videos[i].id" class="form-control" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.videos[i].lessonNumber" class="control-label"></label>
                    <input asp-for="@Model.videos[i].lessonNumber" class="form-control" />
                    <span asp-validation-for="@Model.videos[i].lessonNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.videos[i].videoPath" class="control-label"></label>
                    <input asp-for="@Model.videos[i].videoPath" class="form-control" />
                    <span asp-validation-for="@Model.videos[i].videoPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.videos[i].description" class="control-label"></label>
                    <input asp-for="@Model.videos[i].description" class="form-control" />
                    <span asp-validation-for="@Model.videos[i].description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.videos[i].videoName" class="control-label"></label>
                    <input asp-for="@Model.videos[i].videoName" class="form-control" />
                    <span asp-validation-for="@Model.videos[i].videoName" class="text-danger"></span>
                </div>
            }
            <div class="form-group" style="display:inline-block">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="ListCourse" class="btn btn-primary">Отмена</a>
            </div>
        </form>
    </div>
</div>

<script src="~/angular/angular.min.js"></script>
<script type="text/javascript">
    angular.module('app', []);
</script>
<script src="~/AngularControllers/EditCourseController.js"></script>