@model List<WebApplicationTeacher.Domains.CourseVideos>

@{
    ViewData["Title"] = "CreateCourseVideos";
}

<h1>CreateCourseVideos</h1>

<h4>CourseVideos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResultCourseVideos">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden asp-for="@Model[i].courseId" value="@Model[i].courseId" class="form-control"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model[i].lessonNumber" class="control-label"></label>
                    <input asp-for="@Model[i].lessonNumber" class="form-control" />
                    <span asp-validation-for="@Model[i].lessonNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].videoPath" class="control-label"></label>
                    <input asp-for="@Model[i].videoPath" class="form-control" />
                    <span asp-validation-for="@Model[i].videoPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].description" class="control-label"></label>
                    <input asp-for="@Model[i].description" class="form-control" />
                    <span asp-validation-for="@Model[i].description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].videoName" class="control-label"></label>
                    <input asp-for="@Model[i].videoName" class="form-control" />
                    <span asp-validation-for="@Model[i].videoName" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

